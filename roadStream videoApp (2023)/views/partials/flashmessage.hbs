<div id="flash-message">
  {{#if messages.error}}
    <div class="alert alert-danger">
      {{messages.error}}
    </div>
  {{else}}
    <div class="alert alert-success">
      {{messages.success}}
    </div>
  {{/if}}
</div>

<script>
  setTimeout(function() {
    var successMessage = document.querySelector('.alert-success');
    var dangerMessage = document.querySelector('.alert-danger');
    if (successMessage) {
      successMessage.remove();
    }
    if (dangerMessage) {
      dangerMessage.remove();
    }
  }, 1500);
</script>