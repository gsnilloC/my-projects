<main id="maincontent">
  <body class="registerPage">
    <div>
      <form
        name="createAcc"
        onsubmit="return validateForm()"
        action="/users/register"
        method="POST"
        enctype="application/x-www-form-urlencoded"
      >
        <section class="container">
           <h1 class="registerTitle">Register</h1>
          <label for="username"> Username </label>
          <input type="text" id="username" name="username" required /><br />

          <label for="email"> Email </label>
          <input type="email" id="email" name="email" required /><br />

          <label for="passWord"> Password </label>
          <input type="password" id="password" name="password" required /><br />

          <label for="confirmedPassWord"> Confirm Password </label>
          <input
            type="password"
            id="confirmedPassword"
            name="confirmedPassword"
            required
          /><br />

          <label for="age"> I am 13 years or older: </label>
          <input type="checkbox" id="age" name="age" required /><br />

          <label for="TOS"> I accept the TOS and Privacy Rules: </label>
          <input type="checkbox" id="TOS" name="TOS" required /><br />
          <br />

        </section>
        <button type="submit">Submit</button>
        <div class="errorMSG">
          <span class="errorMSG" id="message"> &nbsp; </span>
        </div>
      </form>
    </div>
  </body>
</main>